---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout pageTitle="Not Found">
  <div
    class="flex flex-col gap-3 h-[300px] items-center justify-center text-center text-xl"
  >
    <div>
      <h1 class="font-bold font-mono text-2xl">404: PAGE NOT FOUND</h1>
    </div>
    <div>
      Would you like to <a
        href="/"
        class="text-blue-700 font-semibold hover:underline hover:text-pink-600"
      >
        return to start
      </a>
    </div>
  </div>
</PageLayout>
