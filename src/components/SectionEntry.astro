---
interface Props {
  headingLeft: string;
  headingRight?: string;
  subheadingLeft: string;
  subheadingRight?: string;
  bulletPoints: string[];
}

const {
  headingLeft,
  subheadingLeft,
  headingRight,
  subheadingRight,
  bulletPoints,
} = Astro.props;
---

<div class="font-sans">
  <div class="px-3 pb-1">
    <div class="flex justify-between items-center">
      <div class="font-extrabold text-lg">{headingLeft}</div>
      <div class="text-sm md:text-base">{headingRight}</div>
    </div>
    <div class="flex justify-between items-center">
      <div class="font-semibold">{subheadingLeft}</div>
      <div class="text-sm md:text-base">{subheadingRight}</div>
    </div>
  </div>
  <div class="pl-3">
    {
      bulletPoints && (
        <ul class={bulletPoints.length > 1 ? "list-disc px-2" : ""}>
          {bulletPoints.map((point) => (
            <li>
              <p class="font-light text-xs md:text-sm text-justify">
                <span set:html={point} />
              </p>
            </li>
          ))}
        </ul>
      )
    }
  </div>
</div>
